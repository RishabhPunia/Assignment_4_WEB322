<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Adding a new Set</title>
  <link rel="stylesheet" href="/css/main.css" />
  
  
</head>

<body>
 
  <%- include('partials/navbar', { page: '/lego/addSet' }) %>

  <div class="container mx-auto">
    
    <div class="container mx-auto">
      <div class="hero bg-base-200 rounded-lg p-6">
          <div class="hero-content text-center ">
              <div class="max-w-2xl">
                  <h1 class="text-5xl font-bold">adding a new set </h1>
                  <p class="py-6">This is used for adding a new set....</p>
              </div>
          </div>
      </div>
  </div>
  <form action="/lego/addSet" method="POST" class="space-y-4">
    <div class="form-control">
      <label for="name" class="label">Name:</label>
      <input type="text" id="name" name="name" required class="input input-bordered w-full">
    </div>
  
    <div class="form-control">
      <label for="year" class="label">Year:</label>
      <input type="number" id="year" name="year" required class="input input-bordered w-full">
    </div>
  
    <div class="form-control">
      <label for="num_parts" class="label">Number of Parts:</label>
      <input type="number" id="num_parts" name="num_parts" required class="input input-bordered w-full">
    </div>
  
    <div class="form-control">
      <label for="img_url" class="label">Image URL:</label>
      <input type="url" id="img_url" name="img_url" required class="input input-bordered w-full">
    </div>
  
    <div class="form-control">
      <label for="theme_id" class="label">Theme:</label>
      <select id="theme_id" name="theme_id" required class="select select-bordered w-full">
        <% themes.forEach(theme => { %>
        <option value="<%= theme.id %>"><%= theme.name %></option>
        <% }) %>
      </select>
    </div>
  
    <div class="form-control">
      <label for="set_num" class="label">New Set Number:</label>
      <input type="text" id="set_num" name="set_num" required class="input input-bordered w-full">
    </div>
  
    <button type="submit" class="btn btn-primary w-full">Adding a new Set</button>
  </form>
  
  </div>

</body>

</html>
